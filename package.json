{
    "name": "ascii-dresden",
    "version": "0.1.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jannikmenzel/ASCII-Website.git"
    },
    "scripts": {
        "start": "hugo server -D",
        "build": "HUGO_ENVIRONMENT=production hugo --minify",
        "build:css": "HUGO_ENVIRONMENT=production NODE_ENV=production postcss assets/css/main.css -o resources/_gen/assets/css/main.css",
        "build:prod": "npm run build:css && npm run build",
        "audit": "lighthouse http://localhost:1313 --chrome-flags='--headless --no-sandbox --disable-gpu' --output html --output-path ./report.html && open -a \"Firefox\" ./report.html"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.14",
        "cssnano": "^7.1.2",
        "lighthouse": "^13.0.3",
        "postcss": "^8.4.23",
        "postcss-cli": "^10.1.0",
        "tailwindcss": "^3.3.2"
    }
}
