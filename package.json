{
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.23",
        "postcss-cli": "^10.1.0",
        "tailwindcss": "^3.3.2",
        "stylelint": "^15.0.0",
        "htmlhint": "^1.0.0",
        "rimraf": "^4.0.0"
    },
    "name": "ascii-dresden",
    "version": "0.1.0",
    "scripts": {
        "build:css": "postcss assets/css/main.css -o static/css/main.css",
        "build": "npm run build:css && hugo --minify",
        "build:lint": "npm run build:css && hugo && npm run lint",
        "lint:css": "stylelint \"assets/**/*.css\"",
        "lint:html": "htmlhint public/**/*.html",
        "lint": "npm run lint:css && npm run lint:html"
    },
    "overrides": {
        "glob": "^9.3.5",
        "rimraf": "^4.0.0"
    }
}
